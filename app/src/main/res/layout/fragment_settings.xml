<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile -->
        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Not set\nAge: N/A\nWeight: N/A"
            android:textSize="16sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile" />

        <!-- Dark Mode -->
        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Dark Mode" />

        <!-- Notifications -->
        <Switch
            android:id="@+id/switchHydrationReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hydration Reminder" />

        <Button
            android:id="@+id/btnHydrationInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Hydration Reminder Interval (minutes)" />

        <Switch
            android:id="@+id/switchMoodReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mood Reminder" />

        <Button
            android:id="@+id/btnMoodInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Mood Reminder Interval (minutes)" />

        <!-- Goals -->
        <Button
            android:id="@+id/btnStepGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Step Goal" />

        <Button
            android:id="@+id/btnWaterGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Water Goal" />

        <!-- Clear -->
        <Button
            android:id="@+id/btnClearHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear History" />

    </LinearLayout>
</ScrollView>

